<%- include('partials/header2.ejs') %> 

<div style="background-color: #444;">
<div class="container" >
    
<div class="album py-5 bg-light">
    <div class="container" style="margin-top: 90px;">
        
                
                <img style="border-radius: 50%;float: left;" class="image-artist" src='<%= artist.image %>' width="140" height="140" >
                <h3 style="color: white;float: left;margin-top: 50px;margin-left: 20px;"><%= artist.artistname %></h3>
                
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>


                <h3 style="color: #00FF7F;">All Tracks</h3>
                <div style="color: white; ">
                    <div class="row">
                    <ol style="color: white;margin-top: 20px;">
                    <% artist.songs.forEach(function(song){ %>
                        
                        <li class="hoversong" style="margin-top: 0px !important;"> <a class="songhover" href="/artists/<%= artist._id %>/songs/<%= song._id %>"><h4 style="color: white;"><%= song.songname %></h4></a></li>
                        
                            
                    <% }); %>
                    </ol>
                    </div>
                </div>
               
                <h3 style="color: #00FF7F;">Albums</h3>
                <div class="row">
                <% artist.albums.forEach(function(album){ %>

                            <div style="float: left;margin-right: 30px;">
                                <button style="background-color: #444;border: none;"><a style="background-color: #444;" href="/artists/<%= artist._id %>/albums/<%= album.name %>"><img src='<%= album.cover %>' width="140" height="140" ></a></button>
                                    <h4 style="color: white;"><%= album.name %></h4>
                            </div>
                    <% }); %>
                </div>
               
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
</div>
</div>
      
<%- include('partials/footer.ejs') %>